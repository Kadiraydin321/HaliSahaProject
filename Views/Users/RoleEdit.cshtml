@model HaliSahaProject.Models.Users

@{
    ViewBag.Title = "Kullanıcı Rolünü Düzenleme";
}

<h2>Kullanıcı Rolünü Düzenleme</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @if (ViewBag.Hata != null)
    {
    <label>@ViewBag.Hata</label>
    }
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
    <div class="form-group">
        <dl class="dl-horizontal">
            <dt>
                Ad
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                Soyad
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LastName)
            </dd>

            <dt>
                Mail
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Mail)
            </dd>
        </dl>
    </div>
    <div class="form-group">
        <label><b>Roller</b></label>
        <div class="col-md-10">
            @Html.DropDownList("Role_ID", new SelectList(ViewBag.Roller, "Value", "Text"), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Role_ID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Kaydet" class="btn btn-outline-success" /> |
            @Html.ActionLink("Listeye Dön", "Index", new { }, new { @class = "btn btn-outline-info" })
        </div>
    </div>
</div>
}
