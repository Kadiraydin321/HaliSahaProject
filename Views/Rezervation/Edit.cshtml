@model HaliSahaProject.Models.Rezervations

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Rezervations</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.User_ID)
    @Html.HiddenFor(model => model.Astroturf_ID)

    <div class="form-group">
        @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "fomr-label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
        </div>
    </div>

    @if (Session["Admin"] != null || Session["HSY"] != null)
    {
        <div class="form-group">
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-check-input", @id = "state" } })
                    @Html.LabelFor(model => model.State, htmlAttributes: new { @class = "fomr-label", @for = "state" })
                    @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    }


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Kaydet" class="btn btn-success" /> |
            @Html.ActionLink("Listeye Geri Dön", "Index", new { }, new { @class = "btn btn-outline-info" })
        </div>
    </div>
</div>
}