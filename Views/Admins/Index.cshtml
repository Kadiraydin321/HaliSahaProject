@model IEnumerable<HaliSahaProject.Models.Admin>

@{
    ViewBag.Title = "Adminler";
}

<h2>Adminler</h2>

<p>
    @Html.ActionLink("Yeni Bir Admin Oluştur", "Create",new { },new { @class="btn btn-outline-success"})
</p>
<table class="table table-success table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.User_ID },new {@class="text-danger"})
        </td>
    </tr>
}

</table>
